{
	"id":"com.moimz.imodule.module.sms",
	"icon":"xi-mobile",
	"title":{
		"ko":"SMS"
	},
	"version":"3.0.0",
	"author":{
		"name":"Arzz",
		"email":"arzz@arzz.com"
	},
	"homepage":"https://www.imodules.io",
	"versionChecker":"https://api.moimz.com/download/latest",
	"description":{
		"ko":"SMS 발송합니다."
	},
	"dependencies":{
		"core":"3.0.0"
	},
	"language":"ko",
	"admin":true,
	"databases":{
		"sms_admin_table":{
			"columns":{
				"midx":{
					"type":"int",
					"length":11,
					"comment":"회원고유번호"
				}
			},
			"indexes":{
				"midx":"primary_key"
			},
			"comment":"SMS 관리자 테이블"
		},
		"sms_send_table":{
			"columns":{
				"idx":{
					"type":"int",
					"length":11,
					"comment":"고유값"
				},
				"frommidx":{
					"type":"int",
					"length":11,
					"comment":"발송회원고유값"
				},
				"tomidx":{
					"type":"int",
					"length":11,
					"comment":"수신회원고유값"
				},
				"sender":{
					"type":"varchar",
					"length":20,
					"comment":"발송번호"
				},
				"receiver":{
					"type":"varchar",
					"length":20,
					"comment":"수신번호"
				},
				"message":{
					"type":"text",
					"comment":"발송메시지"
				},
				"reg_date":{
					"type":"int",
					"length":11,
					"comment":"발송일"
				},
				"status":{
					"type":"enum",
					"length":"'SUCCESS','FAIL'",
					"default":"SUCCESS",
					"comment":"전송상태"
				}
			},
			"indexes":{
				"idx":"primary_key"
			},
			"auto_increment":"idx",
			"comment":"SMS 발송내역 테이블"
		}
	}
}